<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding = "10dp"
    android:layout_height="match_parent">
    
    <TextView
        android:layout_width="wrap_content"
        android:text = "Question 1:"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text = ""
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:text = "If you woke up one day and found that you had  the superpower ability of flying, what would you do?"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id = "@+id/bOptionA"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:text = "A. Fly around the world"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id = "@+id/bOptionB"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:text = "B. Race the fastest jet plane in the world"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id = "@+id/bOptionC"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:text = "C. Help the police and catch bad guys like Superman"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id = "@+id/bOptionD"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:text = "D. Start your own travel business and fly people around the world"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvLogOut"
        android:layout_width="wrap_content"
        android:text = "Return to Home (Saves Progress)"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />

</LinearLayout>
